<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bán vé tàu</h1>
        </div>
    </div>

    <div class="row">
        <form role="form" method="POST">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Thông tin khách hàng
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Họ và tên:</label>
                            <input class="form-control" name="Hoten">
                        </div>
                        <div class="form-group">
                            <label>Số CMND:</label>
                            <input class="form-control" name="Hoten">
                        </div>
                        <div class="form-group">
                            <label>E-mail:</label>
                            <input class="form-control" name="Hoten">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại:</label>
                            <input class="form-control" name="Hoten">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Thông tin vé tàu
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Ga đi</label>
                            <select class="form-control" id="GaDi">
                                {{#each station}}
                                <option value={{MaGa}}>{{TenGa}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Ga đến</label>
                            <select class="form-control" id="GaDen">
                                {{#each station}}
                                <option value={{MaGa}}>{{TenGa}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>