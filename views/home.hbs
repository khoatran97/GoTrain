<div id="colorlib-reservation">
	<!-- <div class="container"> -->
	<div class="row">
		<div class="search-wrap">
			<div class="tab-content">
				<div id="flight" class="tab-pane fade in active">
					<form method="post" class="colorlib-form">
						<div class="row">
							<div class="col-md-3">
								<div class="form-group">
									<label for="date">Ga Đi:</label>
									<select name="GaDi" id="GaDi" class="form-control">
										{{#each stations}}
											<option value="{{MaGa}}">{{TenGa}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="date">Ga Đến:</label>
									<select name="GaDen" id="GaDen" class="form-control">
										{{#each stations}}
											<option value="{{MaGa}}">{{TenGa}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="date">Ngày Đi:</label>
									<div class="form-field">
										<i class="icon icon-calendar2"></i>
										<input type="text" id="date" data-date-format="dd/mm/yyyy"  class="form-control date" placeholder="Ngày Đi" name="NgayDi">
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<input type="submit" name="submit" id="submit" value="Tìm Vé" class="btn btn-primary btn-block">
							</div>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{{#if invalid}}
	<div class="row">
		<div class="alert alert-danger">
			<div class="alert alert-danger m-b-36 col-md-12" role="alert">
				Chuyến tàu bạn tìm không tồn tại
			</div>
		</div>
	</div>
	{{/if}}

</div>
</div>

